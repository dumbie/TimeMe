                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <StackPanel Margin="0,0,10,0" Name="BatteryIcon" Tag="Light" Tapped="lb_ListBatteryTileStyle_Tapped" Background="{StaticResource SystemControlBackgroundAccentBrush}">
                                                <Image Source="Assets/Preview/BatteryIcon.png" Width="135"/>
                                            </StackPanel>
                                            <StackPanel Name="BatteryPerc" Tag="Light" Tapped="lb_ListBatteryTileStyle_Tapped" Background="{StaticResource SystemControlBackgroundAccentBrush}">
                                                <Image Source="Assets/Preview/BatteryPerc.png" Width="135"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <StackPanel Margin="0,0,10,0" Name="BatteryTextLeft" Tag="Light" Tapped="lb_ListBatteryTileStyle_Tapped" Background="{StaticResource SystemControlBackgroundAccentBrush}">
                                                <Image Source="Assets/Preview/BatteryTextLeft.png" Width="135"/>
                                            </StackPanel>
                                            <StackPanel Name="BatteryText" Tag="Light" Tapped="lb_ListBatteryTileStyle_Tapped" Background="{StaticResource SystemControlBackgroundAccentBrush}">
                                                <Image Source="Assets/Preview/BatteryText.png" Width="135"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <StackPanel Margin="0,0,10,0" Name="BatteryTextVertTop" Tag="Light" Tapped="lb_ListBatteryTileStyle_Tapped" Background="{StaticResource SystemControlBackgroundAccentBrush}">
                                                <Image Source="Assets/Preview/BatteryTextVertTop.png" Width="135"/>
                                            </StackPanel>
                                            <StackPanel Name="BatteryTextVert" Tag="Light" Tapped="lb_ListBatteryTileStyle_Tapped" Background="{StaticResource SystemControlBackgroundAccentBrush}">
                                                <Image Source="Assets/Preview/BatteryTextVert.png" Width="135"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Margin="0,10,0,0" Name="BatterySumm" Tag="Light" Tapped="lb_ListBatteryTileStyle_Tapped" Background="{StaticResource SystemControlBackgroundAccentBrush}" HorizontalAlignment="Left">
                                            <Image Source="Assets/Preview/BatterySumm.png" Width="280"/>
                                        </StackPanel>

                                        <TextBlock Text="* The battery level and remaining time is not always completely accurate because the live tile only updates about every 15 minutes." Margin="0,15,0,0" TextWrapping="Wrap" Style="{StaticResource TextBlockAccent}"/>
                                    </StackPanel>

                                    <!-- Live tile Font Family -->
                                    <StackPanel Name="Set_FontFamily" Visibility="Collapsed">
                                        <CheckBox Name="cb_SettingShowMoreTiles" Content="Is option 'Show More Tiles' enabled?" Style="{StaticResource CheckBox}"/>
                                        <TextBlock Text="Enabling this will adapt the tile font size so that it will match other live tiles when you have enabled the option to reduce the tile sizes on your Windows start screen." TextWrapping="Wrap" Style="{StaticResource TextBlockLightGray}"/>

                                        <TextBlock Text="Select a live tile font display weight:" Margin="0,10,0,0" Style="{StaticResource TextBlockBlack}"/>
                                        <TextBlock Text="The following selection will be used as the font's display weight on the live tiles, please note that not all the fonts support weight." TextWrapping="Wrap" Style="{StaticResource TextBlockLightGray}"/>
                                        <ComboBox Name="lp_SettingLiveTileFontWeight" Width="250" HorizontalAlignment="Left" Style="{StaticResource ComboBox}">
                                            <ComboBoxItem Content="Light"/>
                                            <ComboBoxItem Content="Regular"/>
                                            <ComboBoxItem Content="Semibold"/>
                                        </ComboBox>

                                        <TextBlock Text="Change the live font font display size with:" Margin="0,10,0,0" Style="{StaticResource TextBlockBlack}"/>
                                        <TextBlock Text="The following selection will change the font's display size on the live tiles, please make sure you don't set the font size so big to keep the text from getting cutting off." TextWrapping="Wrap" Style="{StaticResource TextBlockLightGray}"/>
                                        <ComboBox Name="lp_SettingLiveTileFontSize" Width="250" HorizontalAlignment="Left" Style="{StaticResource ComboBox}">
                                            <ComboBoxItem Content="-5"/>
                                            <ComboBoxItem Content="-4"/>
                                            <ComboBoxItem Content="-3"/>
                                            <ComboBoxItem Content="-2"/>
                                            <ComboBoxItem Content="-1"/>
                                            <ComboBoxItem Content="0"/>
                                            <ComboBoxItem Content="+1"/>
                                            <ComboBoxItem Content="+2"/>
                                            <ComboBoxItem Content="+3"/>
                                            <ComboBoxItem Content="+4"/>
                                            <ComboBoxItem Content="+5"/>
                                            <ComboBoxItem Content="+6"/>
                                            <ComboBoxItem Content="+7"/>
                                            <ComboBoxItem Content="+8"/>
                                            <ComboBoxItem Content="+9"/>
                                            <ComboBoxItem Content="+10"/>
                                            <ComboBoxItem Content="+11"/>
                                            <ComboBoxItem Content="+12"/>
                                            <ComboBoxItem Content="+13"/>
                                            <ComboBoxItem Content="+14"/>
                                            <ComboBoxItem Content="+15"/>
                                            <ComboBoxItem Content="+16"/>
                                            <ComboBoxItem Content="+17"/>
                                            <ComboBoxItem Content="+18"/>
                                            <ComboBoxItem Content="+19"/>
                                            <ComboBoxItem Content="+20"/>
                                            <ComboBoxItem Content="+21"/>
                                            <ComboBoxItem Content="+22"/>
                                            <ComboBoxItem Content="+23"/>
                                            <ComboBoxItem Content="+24"/>
                                            <ComboBoxItem Content="+25"/>
                                        </ComboBox>

                                        <CheckBox Name="cb_SettingsDisplayHourBold" Content="Display the hour in bolder font weight" Margin="0,10,0,0" Style="{StaticResource CheckBox}"/>
                                        <TextBlock Text="Enabling this will display the time's hour in a bolder weight while the minute will still be displayed in a smaller display font weight." TextWrapping="Wrap" Style="{StaticResource TextBlockLightGray}"/>
                                        <TextBlock Text="* Some fonts may require regular weight." TextWrapping="Wrap" Style="{StaticResource TextBlockAccent}"/>

                                        <CheckBox Name="cb_SettingsDisplayAMPMFont" Content="Display AM or PM in matching font" Margin="0,10,0,0" Style="{StaticResource CheckBox}"/>
                                        <TextBlock Text="Enabling this will display the AM or PM text as the same font as the clock on the live tile and other application features that display the current time." TextWrapping="Wrap" Style="{StaticResource TextBlockLightGray}"/>

                                        <TextBlock Text="Please select a live tile font family:" Margin="0,15,0,0" Style="{StaticResource TextBlockBlack}"/>
                                        <StackPanel Name="Segoe" Tag="Segoe UI" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Segoe UI" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_Segoe" Text="12:34" FontFamily="Segoe UI" FontWeight="Light" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="Gothic720" Tag="/Assets/Fonts/Gothic720-Light.ttf#Gothic720 Lt BT" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Gothic720" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_Gothic720" Text="12:34" FontFamily="/Assets/Fonts/Gothic720-Light.ttf#Gothic720 Lt BT" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="HelveticaNeue" Tag="/Assets/Fonts/HelveticaNeue-UltraLight.ttf#Helvetica Neue" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Helvetica Neue" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_HelveticaNeue" Text="12:34" FontFamily="/Assets/Fonts/HelveticaNeue-UltraLight.ttf#Helvetica Neue" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="Existence" Tag="/Assets/Fonts/Existence-Light.ttf#Existence" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Existence" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_Existence" Text="12:34" FontFamily="/Assets/Fonts/Existence-Light.ttf#Existence" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="OneDay" Tag="/Assets/Fonts/OneDay-Light.ttf#ONE DAY" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="OneDay" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_OneDay" Text="12:34" FontFamily="/Assets/Fonts/OneDay-Light.ttf#ONE DAY" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="Pier" Tag="/Assets/Fonts/Pier-Regular.ttf#Pier Sans" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Pier" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_Pier" Text="12:34" FontFamily="/Assets/Fonts/Pier-Regular.ttf#Pier Sans" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="Panama" Tag="/Assets/Fonts/Panama-Light.ttf#Panama" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Panama" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_Panama" Text="12:34" FontFamily="/Assets/Fonts/Panama-Light.ttf#Panama" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="Bellota" Tag="/Assets/Fonts/Bellota-Light.ttf#Bellota" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Bellota" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_Bellota" Text="12:34" FontFamily="/Assets/Fonts/Bellota-Light.ttf#Bellota" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="Nooa" Tag="/Assets/Fonts/Nooa-Semiserif.ttf#Nooa Semiserif" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Nooa" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_Nooa" Text="12:34" FontFamily="/Assets/Fonts/Nooa-Semiserif.ttf#Nooa Semiserif" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="Modeka" Tag="/Assets/Fonts/Modeka-Light.ttf#Modeka" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Modeka" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_Modeka" Text="12:34" FontFamily="/Assets/Fonts/Modeka-Light.ttf#Modeka" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="Rawengulk" Tag="/Assets/Fonts/Rawengulk-Light.ttf#Rawengulk" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Rawengulk" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_Rawengulk" Text="12:34" FontFamily="/Assets/Fonts/Rawengulk-Light.ttf#Rawengulk" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="Dense" Tag="/Assets/Fonts/Dense-Regular.ttf#Dense" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Dense" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_Dense" Text="12:34" FontFamily="/Assets/Fonts/Dense-Regular.ttf#Dense" FontSize="100"/>
                                        </StackPanel>
                                        <StackPanel Name="DigitalDisplay" Tag="/Assets/Fonts/DigitalDisplay.ttf#digital display tfb" Tapped="lb_FontList_Tapped" Height="125">
                                            <TextBlock Text="Digital Display" Margin="0,0,0,-50" Style="{StaticResource TextBlockLightGray}"/>
                                            <TextBlock Name="txt_DigitalDisplay" Text="12:34" FontFamily="/Assets/Fonts/DigitalDisplay.ttf#digital display tfb" FontSize="100"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Live tile Font Color -->
                                    <StackPanel Name="Set_FontColor" Visibility="Collapsed">
                                        <CheckBox Name="cb_SettingLiveTileFontDuoColor" Content="Show live tile text in duo font colors" Style="{StaticResource CheckBox}"/>
                                        <TextBlock Text="Enabling this will show your live tile text in white and your selected live tile font color, for example your time will be in white and text in your selected font color." TextWrapping="Wrap" Style="{StaticResource TextBlockLightGray}"/>
                                        <CheckBox Name="cb_SettingLiveTileTimeCutOut" Content="Cut out live tile time from background" Margin="0,10,0,0" Style="{StaticResource CheckBox}"/>
                                        <TextBlock Text="Enabling this will cut out your live tile time text so the time will be transparently cut out from the background photo or color." TextWrapping="Wrap" Style="{StaticResource TextBlockLightGray}"/>

                                        <TextBlock Text="Please select a live tile font color:" Margin="0,10,0,0" Style="{StaticResource TextBlockBlack}"/>
                                        <GridView Name="lb_FontColorList" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionMode="Single">
                                            <GridView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="4"/>
                                                </ItemsPanelTemplate>
                                            </GridView.ItemsPanel>
                                            <GridView.ItemTemplate>
                                                <DataTemplate>
                                                    <Rectangle Fill="{Binding Color}" Width="66" Height="66" Tapped="lb_ColorFontList_Tapped"/>
                                                </DataTemplate>
                                            </GridView.ItemTemplate>
                                        </GridView>
                                    </StackPanel>

                                    <!-- Tile Background Color -->
                                    <StackPanel Name="Set_BackgroundColor" Visibility="Collapsed">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Please select a tile background color:" Style="{StaticResource TextBlockBlack}"/>
                                            <Canvas Name="can_BackgroundColor" Width="1" Height="1" Margin="50,0,0,0"/>
                                        </StackPanel>
                                        <GridView Name="lb_BackgroundColorList" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionMode="Single">
                                            <GridView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="4"/>
                                                </ItemsPanelTemplate>
                                            </GridView.ItemsPanel>
                                            <GridView.ItemTemplate>
                                                <DataTemplate>
                                                    <Rectangle Fill="{Binding Color}" Width="66" Height="66" Tapped="lb_ListBackgroundColor_Tapped"/>
                                                </DataTemplate>
                                            </GridView.ItemTemplate>
                                        </GridView>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                        <Image Name="grid_SettingsLogo" Grid.Column="2" MaxWidth="980" Opacity="0.25" Source="Assets/Backgrounds/Settings.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- Page Help -->
            <Grid Name="tab_Help" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Width="315" Margin="5,5,5,5">
                    <ScrollViewer Style="{StaticResource ScrollViewerVertical}">
                        <StackPanel>
                            <StackPanel Name="sp_Help" Margin="0,0,10,0"/>
                            <StackPanel Margin="0,10,0,0">
                                <Button Style="{StaticResource ButtonAccent}" Content="Visit Project Website" Margin="0,10,0,0" Click="SettingsOpenProjectWebsite_Click"/>
                                <Button Style="{StaticResource ButtonAccent}" Content="Open Donation Page" Margin="0,10,0,0" Click="SettingsOpenDonationPage_Click"/>
                                <Button Style="{StaticResource ButtonAccent}" Content="Open Privacy Policy" Margin="0,10,0,0" Click="SettingsOpenPrivacyPolicy_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
                <Image Name="grid_HelpLogo" Grid.Column="1" MaxWidth="590" Opacity="0.25" Source="Assets/Backgrounds/Help.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Page>