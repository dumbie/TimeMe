<Page
    x:Class="TimeMe.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:TimeMe"
    mc:Ignorable="d">

    <!-- Page Grid -->
    <Grid Name="grid_Main" Opacity="0.60" IsHitTestVisible="False">
        <!-- Page Menu -->
        <Grid Name="page_Menu" Background="#1D1D1D">
            <ListBox Name="lb_Menu" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemNoPadding}" Tapped="lb_Menu_Tapped">
                <StackPanel Name="menuButtonTile" Style="{StaticResource ListBoxStackPanel}" ToolTipService.ToolTip="Manage your pinned live tiles on this tab.">
                    <Image Source="Assets/Menu/Tile.png" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Tiles" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Name="menuButtonWeather" Style="{StaticResource ListBoxStackPanel}" ToolTipService.ToolTip="View the current weather and forecast on this tab.">
                    <Image Source="Assets/Menu/Weather.png" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Weather" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Name="menuButtonCountdown" Style="{StaticResource ListBoxStackPanel}" ToolTipService.ToolTip="Checkout your countdown events on this tab.">
                    <Image Source="Assets/Menu/Countdown.png" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Countdown" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Name="menuButtonStopwatch" Style="{StaticResource ListBoxStackPanel}" ToolTipService.ToolTip="You can use the stopwatch on this tab.">
                    <Image Source="Assets/Menu/Stopwatch.png" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Stopwatch" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Name="menuButtonTimer" Style="{StaticResource ListBoxStackPanel}" ToolTipService.ToolTip="You can set a timer alarm on this tab.">
                    <Image Source="Assets/Menu/Timer.png" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Timer" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Name="menuButtonWorld" Style="{StaticResource ListBoxStackPanel}" ToolTipService.ToolTip="You can see times around the world on this tab.">
                    <Image Source="Assets/Menu/World.png" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="World" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Name="menuButtonSleepingScreen" Style="{StaticResource ListBoxStackPanel}" ToolTipService.ToolTip="Open the sleeping screen feature.">
                    <Image Source="Assets/Menu/SleepingScreen.png" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Sleepscreen" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Name="menuButtonFlashLight" Style="{StaticResource ListBoxStackPanel}" ToolTipService.ToolTip="Open the flashlight feature.">
                    <Image Source="Assets/Menu/FlashLight.png" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Flashlight" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Name="menuButtonSettings" Style="{StaticResource ListBoxStackPanel}" ToolTipService.ToolTip="Manage tile and other settings on this tab.">
                    <Image Source="Assets/Menu/Settings.png" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Settings" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Name="menuButtonHelp" Style="{StaticResource ListBoxStackPanel}" ToolTipService.ToolTip="Get help for the application on this tab.">
                    <Image Source="Assets/Menu/Help.png" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Help" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                </StackPanel>
            </ListBox>
        </Grid>

        <!-- Page Main -->
        <Grid Name="page_Main" Background="#E1E1E1">
            <!-- Page Statusbar -->
            <StackPanel Name="sp_StatusBar" Visibility="Collapsed" Background="#1D1D1D" Opacity="0.75" VerticalAlignment="Top" Canvas.ZIndex="1">
                <TextBlock Name="txt_StatusBar" Style="{StaticResource TextBlockWhite}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                <ProgressBar Name="pb_StatusBar" IsIndeterminate="True" VerticalAlignment="Top"/>
            </StackPanel>

            <!-- Page Tile -->
            <Grid Name="tab_Tile" Visibility="Collapsed">
                <ScrollViewer Name="sv_tab_Tile" Style="{StaticResource ScrollViewerHorizontal}">
                    <Grid Margin="5,5,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Width="310" HorizontalAlignment="Left">
                            <ScrollViewer Style="{StaticResource ScrollViewerVertical}">
                                <StackPanel Name="sp_tab_Tile">
                                    <TextBlock Name="txt_LiveTileStatus" Text="Please tap on 'Pin TimeMe Live Tile' button below to begin your new live tile experience, you might need to set the used live tile size." TextWrapping="Wrap" Style="{StaticResource TextBlockBlack}"/>
                                    <TextBlock Name="txt_WeekNumber" Margin="0,10,0,0" Text="Loading current week number." Style="{StaticResource TextBlockLightGray}"/>

                                    <TextBlock Visibility="Collapsed" Name="txt_BatteryStatus" Margin="0,10,0,0" Text="Battery: loading battery status." TextWrapping="Wrap" Style="{StaticResource TextBlockLightGray}"/>
                                    <TextBlock Visibility="Collapsed" Name="txt_BatteryWarning" Text="Please make sure that TimeMe is always allowed to run in the background during your battery saver to keep the live tile up-to-date." TextWrapping="Wrap" Style="{StaticResource TextBlockAccent}"/>
                                    <Button Visibility="Collapsed" Name="btn_TileBatterySettings" Style="{StaticResource ButtonAccent}" Content="Open Device Battery Saver Settings" Click="SettingsOpenBatterySettings_Click"/>

                                    <Button Name="btn_PinLiveTile" IsEnabled="False" Style="{StaticResource ButtonAccent}" Margin="0,15,0,0" Content="Pin the TimeMe Time Live Tile to Start" Click="btn_PinLiveTile_Click"/>
                                    <Button Name="btn_PinWeatherTile" IsEnabled="False" Style="{StaticResource ButtonAccent}" Margin="0,10,0,0" Content="Pin the TimeMe Weather Tile to Start" Click="btn_PinWeatherTile_Click"/>
                                    <Button Name="btn_PinBatteryTile" IsEnabled="False" Style="{StaticResource ButtonAccent}" Margin="0,10,0,0" Content="Pin the TimeMe Battery Tile to Start" Click="btn_PinBatteryTile_Click"/>
                                    <Button Name="btn_PinBlankTile" IsEnabled="False" Style="{StaticResource ButtonAccent}" Margin="0,10,0,0" Content="Pin a blank tile to the Start Screen" Click="btn_PinBlankTile_Click"/>

                                    <Button Name="btn_LiveTileStartStop" IsEnabled="False" Style="{StaticResource ButtonAccent}" Margin="0,20,0,0" Content="Loading Live Tile Background Updates" Click="btn_LiveTileStartStop_Click"/>
                                    <Button Name="btn_LiveTileForceUpdate" IsEnabled="False" Style="{StaticResource ButtonAccent}" Margin="0,10,0,0" Content="Force Live Tile Background Update" Click="btn_LiveTileForceUpdate_Click"/>
                                    <Button Name="btn_DataForceUpdate" IsEnabled="False" Style="{StaticResource ButtonAccent}" Margin="0,10,0,0" Content="Force Downloading Data Update" Click="btn_DataForceUpdate_Click"/>

                                    <Button Name="btn_PinSleepingScreen" Style="{StaticResource ButtonAccent}" Margin="0,20,0,0" Content="Pin the Sleeping Screen tile" Click="btn_PinSleepingScreen_Click"/>
                                    <Button Name="btn_PinFlashlight" Style="{StaticResource ButtonAccent}" Margin="0,10,0,0" Content="Pin the Flashlight tile" Click="btn_PinFlashlight_Click"/>

                                    <!-- Scroll forward button -->
                                    <StackPanel Name="img_Tile_Forward" Orientation="Horizontal" Margin="0,15,0,0" Tapped="img_Tile_Forward_Tapped">
                                        <Image HorizontalAlignment="Right" Source="Assets/Icons/ForwardBlack.png" Height="20" Margin="0,0,5,0"/>
                                        <TextBlock Text="Scroll to tile preview" Style="{StaticResource TextBlockBlack}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                        <Grid Grid.Column="1" Width="310" HorizontalAlignment="Left">
                            <ScrollViewer Name="sv_tab_Tile_Right" Style="{StaticResource ScrollViewerVertical}">
                                <StackPanel>
                                    <TextBlock Name="txt_LiveTileCurrent" Style="{StaticResource TextBlockBlack}"/>
                                    <Grid Name="grid_LiveTileCurrent" HorizontalAlignment="Left">
                                        <Image Name="img_LiveTileCurrent" Stretch="Uniform" MaxWidth="320" MaxHeight="160"/>
                                    </Grid>
                                    <TextBlock Name="txt_BingInformation" TextWrapping="Wrap" Style="{StaticResource TextBlockLightGray}"/>
                                    <TextBlock Name="txt_LiveTileUpdateTime" Style="{StaticResource TextBlockBlack}" Margin="0,15,0,0"/>

                                    <Button Name="btn_ChangeLiveTileStyle" Style="{StaticResource ButtonAccent}" Margin="0,15,0,0" Content="Change the time live tile size and style" Click="btn_ChangeLiveTileStyle_Click"/>
                                    <Button Name="btn_ChangeWeatherTileStyle" Style="{StaticResource ButtonAccent}" Margin="0,10,0,0" Content="Change the weather tile size and style" Click="btn_ChangeWeatherTileStyle_Click"/>
                                    <Button Name="btn_ChangeBatteryTileStyle" Style="{StaticResource ButtonAccent}" Margin="0,10,0,0" Content="Change the battery tile size and style" Click="btn_ChangeBatteryTileStyle_Click"/>
                                    <Button Name="btn_ChangeLiveTileText" Style="{StaticResource ButtonAccent}" Margin="0,10,0,0" Content="Change time live tile displayed text" Click="btn_ChangeLiveTileText_Click"/>

                                    <TextBlock Text="The main menu can be scrolled and certain pages can be swiped left and right for more options when not visible or out of range." TextWrapping="Wrap" Style="{StaticResource TextBlockAccent}" Margin="0,15,0,0"/>
                                    <TextBlock Text="This is a beta test release so things may not always work properly, don't always rely on the time shown on the tile because it can be wrong at times." TextWrapping="Wrap" Style="{StaticResource TextBlockBlack}" Margin="0,15,0,0"/>

                                    <!-- Scroll back button -->
                                    <StackPanel Name="img_Tile_Back" Orientation="Horizontal" Margin="0,15,0,0" Tapped="img_Tile_Back_Tapped">
                                        <Image HorizontalAlignment="Right" Source="Assets/Icons/BackBlack.png" Height="20" Margin="0,0,5,0"/>
                                        <TextBlock Text="Scroll to tile setup" Style="{StaticResource TextBlockBlack}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                        <Image Name="grid_TileLogo" Grid.Column="2" MaxWidth="680" Opacity="0.25" Source="Assets/Backgrounds/Tile.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- Page Weather -->
            <Grid Name="tab_Weather" Visibility="Collapsed">
                <Image Name="tab_Weather_ImgTemperaturePre" Stretch="UniformToFill"/>
                <Image Name="tab_Weather_ImgTemperatureCur" Stretch="UniformToFill"/>
                <Image Name="tab_Weather_ImgWallpaper" Opacity="0.25" Stretch="UniformToFill"/>

                <StackPanel Margin="5,5,5,5">
                    <TextBlock Name="txt_ForecastInformation" Style="{StaticResource TextBlockPageTitleBlack}" Text="Loading weather information please wait..."/>
                    <StackPanel Name="sp_WeatherCurrent" Visibility="Collapsed">
                        <TextBlock Name="txt_ForecastLocation" Margin="0,-5,0,0" Style="{StaticResource TextBlockPageTitleWhite}" FontWeight="Normal"/>
                        <StackPanel Orientation="Horizontal">
                            <Image Name="img_ForecastIcon" Height="25" Margin="0,0,10,0"/>
                            <TextBlock Name="txt_ForecastTemperatureHigh" Style="{StaticResource TextBlockPageTitleWhite}" Foreground="#FF3900"/>
                            <TextBlock Name="txt_ForecastTemperatureLow" Style="{StaticResource TextBlockPageTitleWhite}" Foreground="#00C6FF"/>
                            <TextBlock Name="txt_ForecastCondition" Margin="6,0,0,0" Style="{StaticResource TextBlockPageTitleWhite}"/>
                        </StackPanel>
                        <StackPanel Name="sp_WeatherPrecipitation" Orientation="Horizontal" Margin="0,1,0,0">
                            <Image MaxHeight="23" MaxWidth="23" Margin="0,0,10,0" Source="Assets/WeatherOther/tab_Precipitation.png"/>
                            <TextBlock Name="txt_WeatherPrecipitation" Style="{StaticResource TextBlockPageTitleWhite}" FontSize="20"/>
                        </StackPanel>
                        <StackPanel Name="sp_WeatherHumidity" Orientation="Horizontal" Margin="2.5,1,0,0">
                            <Image MaxHeight="23" MaxWidth="23" Margin="0,0,10,0" Source="Assets/WeatherOther/tab_Humidity.png"/>
                            <TextBlock Margin="1,0,0,0" Name="txt_WeatherHumidity" Style="{StaticResource TextBlockPageTitleWhite}" FontSize="20"/>
                        </StackPanel>
                        <StackPanel Name="sp_WeatherVisibility" Orientation="Horizontal" Margin="0,1,0,0">
                            <Image MaxHeight="23" MaxWidth="23" Margin="0,0,10,0" Source="Assets/WeatherOther/tab_Visibility.png"/>
                            <TextBlock Name="txt_WeatherVisibility" Style="{StaticResource TextBlockPageTitleWhite}" FontSize="20"/>
                        </StackPanel>
                        <StackPanel Name="sp_WeatherWindSpeed" Orientation="Horizontal" Margin="0,1,0,0">
                            <Image MaxHeight="23" MaxWidth="23" Margin="0,0,10,0" Source="Assets/WeatherOther/tab_WindSpeed.png"/>
                            <TextBlock Name="txt_WeatherWindSpeed" Style="{StaticResource TextBlockPageTitleWhite}" FontSize="20"/>
                        </StackPanel>
                        <StackPanel Name="sp_WeatherPressure" Orientation="Horizontal" Margin="0,1,0,0">
                            <Image MaxHeight="23" MaxWidth="23" Margin="0,0,10,0" Source="Assets/WeatherOther/tab_Pressure.png"/>
                            <TextBlock Name="txt_WeatherPressure" Style="{StaticResource TextBlockPageTitleWhite}" FontSize="20"/>
                        </StackPanel>
                        <StackPanel Name="sp_WeatherUv" Orientation="Horizontal" Margin="0,1,0,0">
                            <Image MaxHeight="23" MaxWidth="23" Margin="0,0,10,0" Source="Assets/WeatherOther/tab_UvIndex.png"/>
                            <TextBlock Name="txt_WeatherUv" Style="{StaticResource TextBlockPageTitleWhite}" FontSize="20"/>
                        </StackPanel>
                        <StackPanel Name="sp_WeatherSunrise" Orientation="Horizontal">
                            <Image MaxHeight="23" MaxWidth="23" Margin="0,0,10,0" Source="Assets/WeatherOther/tab_Sunrise.png"/>
                            <TextBlock Name="txt_WeatherSunrise" Style="{StaticResource TextBlockPageTitleWhite}" FontSize="20"/>
                        </StackPanel>
                        <StackPanel Name="sp_WeatherSunset" Orientation="Horizontal">
                            <Image MaxHeight="23" MaxWidth="23" Margin="0,0,10,0" Source="Assets/WeatherOther/tab_Sunset.png"/>
                            <TextBlock Name="txt_WeatherSunset" Style="{StaticResource TextBlockPageTitleWhite}" FontSize="20"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <ScrollViewer Name="sv_WeatherForecast" Style="{StaticResource ScrollViewerHorizontal}" VerticalAlignment="Bottom">
                    <StackPanel>
                        <TextBlock Name="txt_ForecastLastupdate" Margin="5,0,0,0" Style="{StaticResource TextBlockWhite}" Opacity="0.60"/>
                        <ListBox Name="lb_ForecastListBox" Style="{StaticResource ListBoxHorizontal}" SelectionMode="Single" Tapped="lb_ForecastListBox_Tapped">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="-5,-5,-5,-5">
                                        <StackPanel.Background>
                                            <SolidColorBrush Color="White" Opacity="0.12"/>
                                        </StackPanel.Background>
                                        <StackPanel Margin="5,5,5,5">
                                            <TextBlock Text="{Binding WeatherDate}" Style="{StaticResource TextBlockWhite}" FontWeight="SemiBold"/>
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Height="30" HorizontalAlignment="Left" Source="{Binding WeatherIcon}"/>
                                                    <TextBlock Margin="3,18,0,0" Text="{Binding WeatherConditionDay}" Style="{StaticResource TextBlockWhite}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <Image Height="18" Margin="0,0,5,0" Source="Assets/WeatherOther/tab_Temperature.png"/>
                                                    <TextBlock Text="{Binding WeatherTempHigh}" Style="{StaticResource TextBlockWhite}" Foreground="#FF3900"/>
                                                    <TextBlock Text=" High" Margin="0,0,5,0" Style="{StaticResource TextBlockWhite}"/>
                                                    <TextBlock Text="{Binding WeatherTempLow}" Style="{StaticResource TextBlockWhite}" Foreground="#00C6FF"/>
                                                    <TextBlock Text=" Low" Style="{StaticResource TextBlockWhite}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <Image Height="18" Margin="0,0,5,0" Source="Assets/WeatherOther/tab_Precipitation.png"/>
                                                    <TextBlock Text="{Binding WeatherPrecipitation}" Style="{StaticResource TextBlockWhite}"/>
                                                    <Image Height="18" Margin="5,0,5,0" Source="Assets/WeatherOther/tab_WindSpeed.png"/>
                                                    <TextBlock Text="{Binding WeatherWindSpeed}" Style="{StaticResource TextBlockWhite}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Page Countdown -->
            <Grid Name="tab_Countdown" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Width="315" Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,5">
                                <Button Style="{StaticResource ButtonAccent}" Name="btn_CountdownAddEvent" Content="Add Event" Click="btn_CountdownAddEvent_Click"/>
                                <Button Style="{StaticResource ButtonAccent}" Name="btn_CountdownRemoveEvent" Margin="5,0,0,0" Content="Remove Event" Click="btn_CountdownRemoveEvent_Click"/>
                                <Button Style="{StaticResource ButtonAccent}" Name="btn_CountdownRefresh" Margin="5,0,0,0" Content="Refresh" Click="btn_CountdownRefresh_Click"/>
                            </StackPanel>
                            <DatePicker Name="datepick_CountDate" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                <TextBlock Text="Name:" VerticalAlignment="Center" Style="{StaticResource TextBlockBlack}"/>
                                <TextBox Name="txtbox_CountName" Style="{StaticResource TextBox}" Width="248" Margin="5,0,0,5" IsSpellCheckEnabled="False" KeyUp="txtbox_CountName_KeyUp"/>
                            </StackPanel>

                            <TextBlock Name="txt_CountdownDates" Text="Currently set event countdown dates:" Style="{StaticResource TextBlockBlack}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <ListBox Name="lb_CountdownListBox" SelectionMode="Multiple" Style="{StaticResource ListBoxVertical}" Margin="-5,0,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding CountDays}" Style="{StaticResource TextBlockAccent}" FontSize="35" VerticalAlignment="Bottom"/>
                                        <TextBlock Style="{StaticResource TextBlockBlack}" VerticalAlignment="Bottom" Margin="0,0,0,5">
                                                <Run Text=" "/>
                                                <Run Text="{Binding CountName}"/>
                                        </TextBlock>
                                        <TextBlock Style="{StaticResource TextBlockLightGray}" VerticalAlignment="Bottom" Margin="0,0,0,5">
                                                <Run Text=" "/>
                                                <Run Text="{Binding CountDate}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
                <Image Name="grid_CountdownLogo" Grid.Column="1" MaxWidth="660" Opacity="0.25" Source="Assets/Backgrounds/Countdown.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- Page Stopwatch -->
            <Grid Name="tab_Stopwatch" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Width="315" Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                <Button Style="{StaticResource ButtonAccent}" Name="btn_StopWatchStartSplit" Content="Start Time" Click="btn_StopWatchStartSplit_Click"/>
                                <Button Style="{StaticResource ButtonAccent}" Name="btn_StopWatchPauseReset" Margin="5,0,0,0" Content="Pause Watch" IsEnabled="False" Click="btn_StopWatchStopReset_Click"/>
                                <Button Style="{StaticResource ButtonAccent}" Name="btn_StopWatchClearSplits" Margin="5,0,0,0" Content="Clear Splits" IsEnabled="False" Click="btn_StopWatchClearTimes_Click"/>
                            </StackPanel>

                            <TextBlock Name="txt_StopWatchInfo" Text="The stopwatch is currently not running." Style="{StaticResource TextBlockLightGray}"/>
                            <TextBlock Name="txt_StopWatchTimeTotal" Text="00:00:00,00" FontWeight="Light" FontSize="60"/>
                            <StackPanel Name="stkp_StopWatchTimeSplit" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Split:" Margin="0,-2,5,0" FontSize="30" Style="{StaticResource TextBlockLightGray}"/>
                                <TextBlock Name="txt_StopWatchTimeSplit" Text="00:00:00,00" FontSize="30" Style="{StaticResource TextBlockLightGray}"/>
                            </StackPanel>

                            <TextBlock Name="txt_StopWatchPrevTimes" Text="There are no stopwatch split times set." Style="{StaticResource TextBlockBlack}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <ListBox Name="lb_StopWatchListBox" Style="{StaticResource ListBoxVertical}" ItemContainerStyle="{StaticResource ListBoxItemDisabled}" Margin="-8,0,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,-10">
                                        <TextBlock Text="{Binding SplitIdStart}" Style="{StaticResource TextBlockAccent}"/>
                                        <TextBlock Style="{StaticResource TextBlockBlack}">
                                            <Run Text="{Binding SplitId}"/>
                                            <Run Text="{Binding Split}"/>
                                        </TextBlock>
                                        <TextBlock Style="{StaticResource TextBlockLightGray}">
                                            <Run Text=" "/>
                                            <Run Text="{Binding Total}"/>
                                        </TextBlock>
                                        <TextBlock Style="{StaticResource TextBlockAccent}">
                                            <Run Text=" "/>
                                            <Run Text="{Binding Date}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
                <Image Name="grid_StopwatchLogo" Grid.Column="1" MaxWidth="490" Opacity="0.25" Source="Assets/Backgrounds/Stopwatch.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- Page Timer -->
            <Grid Name="tab_Timer" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Width="315" Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                <Button Style="{StaticResource ButtonAccent}" Content="Add Timer" Click="btn_TimerAdd_Click"/>
                                <Button Style="{StaticResource ButtonAccent}" Name="btn_TimerRemove" Margin="5,0,0,0" Content="Remove Timer" Click="btn_TimerRemove_Click" IsEnabled="False"/>
                                <Button Style="{StaticResource ButtonAccent}" Name="btn_TimerRefresh" Margin="5,0,0,0" Content="Refresh" Click="btn_TimerRefresh_Click"/>
                            </StackPanel>

                            <TextBlock Text="Enter a time for the timer alarm to go off in:" Margin="0,5,0,5" Style="{StaticResource TextBlockBlack}"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Name="txtbox_TimerDays" InputScope="Number" MaxLength="2" Style="{StaticResource TextBox}"/>
                                <TextBlock Margin="2,0,5,0" Text="Day" VerticalAlignment="Center" Style="{StaticResource TextBlockBlack}"/>
                                <TextBox Name="txtbox_TimerHours" InputScope="Number" MaxLength="2" Style="{StaticResource TextBox}"/>
                                <TextBlock Margin="2,0,5,0" Text="Hour" VerticalAlignment="Center" Style="{StaticResource TextBlockBlack}"/>
                                <TextBox Name="txtbox_TimerMinutes" InputScope="Number" MaxLength="2" Style="{StaticResource TextBox}"/>
                                <TextBlock Margin="2,0,0,0" Text="Min" VerticalAlignment="Center" Style="{StaticResource TextBlockBlack}"/>
                            </StackPanel>

                            <TextBlock Name="txt_ActiveTimers" Text="Loading timer alarms..." TextWrapping="Wrap" Style="{StaticResource TextBlockBlack}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <ListBox Name="lb_TimerListBox" SelectionMode="Multiple" Style="{StaticResource ListBoxVertical}" Margin="-5,0,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource TextBlockBlack}">
                                            <Run Text="{Binding TimerContent}"/>
                                        </TextBlock>
                                        <TextBlock Style="{StaticResource TextBlockLightGray}">
                                            <Run Text="Alarm time:"/>
                                            <Run Text="{Binding TimerTime}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
                <Image Name="grid_TimerLogo" Grid.Column="1"  MaxWidth="630" Opacity="0.25" Source="Assets/Backgrounds/Timer.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- Page World -->
            <Grid Name="tab_World" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Width="315" Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock Text="Current times in major cities over the world:" Margin="0,-2,0,0" Style="{StaticResource TextBlockBlack}"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <ListBox Name="lb_WorldListBox" Margin="-12,5,0,0" Style="{StaticResource ListBoxVertical}" ItemContainerStyle="{StaticResource ListBoxItemDisabled}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
