      <Navigate Target="MainPage"/>
    </Command>

    <Command Name="Speech">
      <Example>TimeMe Speech</Example>
      <ListenFor>speech</ListenFor>
      <Feedback>Preparing for my TimeMe Speech</Feedback>
      <Navigate Target="MainPage"/>
    </Command>
  </CommandSet>
</VoiceCommands>